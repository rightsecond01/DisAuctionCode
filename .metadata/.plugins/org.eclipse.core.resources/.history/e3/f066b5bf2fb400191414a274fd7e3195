package com.discodeaucion_ver03;

import java.io.File;

public class PreImageReceiving extends Thread{
	
	String token;
	String user_id;
	String room_game;
	String downloadFolder;
	
	public PreImageReceiving(String user_id,String token,String room_game) {
		this.user_id = user_id;
		this.token = token;
		this.room_game = room_game;
		this.downloadFolder = "C:\\chat_temp\\" + user_id + "\\" + token.substring(0,10) + "\\" + room_game;
	}
	
	@Override
	public void run() {
	///////디렉토리 생성//////////
		File folder = new File(downloadFolder);
		if(!folder.exists()) {	
			folder.mkdir();
			}
    ////끝////
	}

}
